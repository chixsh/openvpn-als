<assembly>
  <id>extension-assembly</id>
  <formats>
    <format>zip</format>
  </formats>
 <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>WEB-INF/lib</outputDirectory>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/webapp</directory>
      <outputDirectory>/webapp</outputDirectory>
      <excludes>
        <exclude>**/web.xml</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>extension.xml</source>
      <outputDirectory>/</outputDirectory>
      <destName>extension.xml</destName>
    </file>
    <file>
      <source>target/unix-0.9.2.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>unix-0.9.2.jar</destName>
    </file>
  </files>

</assembly>
